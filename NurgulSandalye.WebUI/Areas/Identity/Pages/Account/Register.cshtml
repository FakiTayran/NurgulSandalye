@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="userPagesNav"></section>

<section class="login_box_area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <div class="hover">
                        <h4>Hesabınız var mı?</h4>
                        <p>Hemen giriş yaparak binlerce üründen dilediğinizi sipariş verin!</p>
                        <a asp-area="Identity" asp-page="/Account/Login" class="button button-account">Giriş Yap</a>

                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>HESAP OLUŞTUR</h3>
                    <form class="row login_form" id="account" method="post">
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Email" class="form-control" placeholder="E-Posta" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            
                            <input asp-for="Input.Password" class="form-control" placeholder="Şifre" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar"/>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-login w-100">Üye Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
